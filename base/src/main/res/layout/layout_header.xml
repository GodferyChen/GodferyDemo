<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/layout_header"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/headerBackground"
	android:orientation="vertical">

	<View
		android:id="@+id/header_v_place_holder"
		android:layout_width="match_parent"
		android:layout_height="0dp"/>

	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="@dimen/headerHeight"
		android:descendantFocusability="blocksDescendants"
		android:orientation="horizontal">

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_left0"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/selector_pressed_transparent"
				android:ellipsize="end"
				android:gravity="center"
				android:maxWidth="@dimen/headerLeftRightMaxWidth"
				android:minWidth="@dimen/headerLeftRightMinWidth"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@color/headerTextColor"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_left0"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_dot_header"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_left0"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/selector_dot_header"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/headerTextColor"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_left1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/selector_pressed_transparent"
				android:ellipsize="end"
				android:gravity="center"
				android:maxWidth="@dimen/headerLeftRightMaxWidth"
				android:minWidth="@dimen/headerLeftRightMinWidth"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@color/headerTextColor"
				android:visibility="gone"/>

			<View
				android:id="@+id/header_v_dot_left1"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_dot_header"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_left1"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/selector_dot_header"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/headerTextColor"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<LinearLayout
			android:id="@+id/header_layout_title"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/selector_pressed_transparent"
			android:gravity="center"
			android:orientation="vertical"
			android:textColor="@android:color/white">

			<TextView
				android:id="@+id/header_tv_title"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:drawablePadding="4dp"
				android:ellipsize="end"
				android:gravity="center"
				android:singleLine="true"
				android:text="标题"
				android:textColor="@color/headerTextColor"
				android:textSize="18sp"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_subtitle"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:drawablePadding="4dp"
				android:ellipsize="end"
				android:gravity="center"
				android:singleLine="true"
				android:text="子标题"
				android:textColor="@color/headerTextColor"
				android:visibility="gone"/>
		</LinearLayout>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_right1"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/selector_pressed_transparent"
				android:ellipsize="end"
				android:gravity="center"
				android:maxWidth="@dimen/headerLeftRightMaxWidth"
				android:minWidth="@dimen/headerLeftRightMinWidth"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@color/headerTextColor"
				android:visibility="gone"/>

			<View
				android:id="@+id/header_v_dot_right1"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_dot_header"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_right1"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/selector_dot_header"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/headerTextColor"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>

		<FrameLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/header_tv_right0"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/selector_pressed_transparent"
				android:ellipsize="end"
				android:gravity="center"
				android:maxWidth="@dimen/headerLeftRightMaxWidth"
				android:minWidth="@dimen/headerLeftRightMinWidth"
				android:padding="8dp"
				android:singleLine="true"
				android:textColor="@color/headerTextColor"
				android:visibility="invisible"/>

			<View
				android:id="@+id/header_v_dot_right0"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:background="@drawable/selector_dot_header"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/header_tv_dot_num_right0"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:layout_gravity="right|top"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/selector_dot_header"
				android:gravity="center"
				android:text="0"
				android:textColor="@color/headerTextColor"
				android:textSize="12sp"
				android:visibility="gone"/>
		</FrameLayout>
	</LinearLayout>
</LinearLayout>